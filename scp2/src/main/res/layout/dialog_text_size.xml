<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textSizeUi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textSizeExampleTextViewHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/defaultMarginSmall"
        android:paddingRight="@dimen/defaultMarginSmall"
        android:text="@string/text_size_lists"
        />

    <SeekBar
        android:id="@+id/seekbarUi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/defaultMarginSmall"
        />

    <TextView
        android:id="@+id/textSizeArticle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textSizeExampleTextViewHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/defaultMarginSmall"
        android:paddingRight="@dimen/defaultMarginSmall"
        android:text="@string/text_size_article"
        />

    <SeekBar
        android:id="@+id/seekbarArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/defaultMarginSmall"
        />

</LinearLayout>