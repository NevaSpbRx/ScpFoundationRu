<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ваша текущая поддержка"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/current_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тут будет отображаться ваша текущая поддержка"
            android:textSize="19sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/avaible_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поддержите наш проект любым понравившемся вам способом"
            android:gravity="center"
            android:textSize="23sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>